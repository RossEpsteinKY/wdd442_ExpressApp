{%  extends '../layouts/_default.twig' %}
{% block main_content %}
    <h1>List of Quizzes</h1>
    <ul>
        <a href="/">HOME</a>
        <br>
        <br>
        <a href="/quizzes/new">Add New Quiz</a>
        <br>
        {% for quiz in quizzes %}
            <br>
            <li><a href="/quizzes/{{ quiz.id }}/show"> {{ quiz.name }}</a></li>
            <a href="/quizzes/{{ quiz.id }}/edit">Edit</a>
            |
            <a href="/quizzes/{{ quiz.id }}/delete" methods="del">Delete</a>
            <br>
        {% endfor %}
    </ul>
{% endblock %}
