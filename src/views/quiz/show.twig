{%  extends '../layouts/_default.twig' %}
{% block main_content %}
    <a href="/quizzes">Show All Quizzes</a>
    <h1>{{  quiz.name }}</h1>
    <p><strong>ID: </strong>{{ quiz.id }}</p>
    <p><strong>Created At: </strong>{{ quiz.createdAt }}</p>
    <p><strong>Updated At: </strong>{{ quiz.updatedAt }}</p>
    <p>
        <a href="/quizzes/{{ quiz.id }}/delete">Delete {{ quiz.name }}</a>
    </p>

{% endblock %}
